@model IEnumerable<UserManagementPBI.Models.Reports>

@{
    ViewData["Title"] = "Index";
}
<div class="dashboard">


    <!-- Main Content -->
    <div class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <div class="breadcrumbs">
                <div class="breadcrumb-item">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/fcb3bc0414eccce6fe1385a220fa3858e67e605b?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Home" class="breadcrumb-icon">
                    <span>Tableau de bord</span>
                </div>
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/4c8200eba9cded5f68650867b7773fea977f1234?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Arrow" class="breadcrumb-arrow">
            </div>
            <div class="header-divider"></div>
        </div>

        <!-- Section Header -->
        <div class="section-header">
            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/53da30b81543d43962b9d4857e9dcaad032d1f08?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Groups" class="section-icon">
            <h1 class="section-title">Groupes de rapports BI</h1>
            <div class="search-bar">
                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/175e372235aefe1ea6e66cd6d93728050cfd075c?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Search" class="search-bar-icon">
                <input type="text" placeholder="Recherche" class="search-input">
                <div class="search-cursor"></div>
                <div class="search-clear">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/8c8ca446cf0428e96cc51f2560547c5dcf4ab019?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Clear" class="clear-icon">
                </div>
            </div>
            <div class="section-divider"></div>
        </div>

        <!-- Filter Section -->
        <div class="filter-section">
            <div class="filter-left">
                <button class="filter-button active">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/feb0206063aff91bd50c10b8eba96e22102e90eb?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Refresh" class="filter-icon">
                    <span>Actualiser</span>
                </button>
                <button class="filter-button">
                    <span>0 Selected</span>
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/71e96c79650866bf8012585bd371790aed4d7d83?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Down" class="filter-icon">
                </button>
                <div class="filter-dropdown-wrapper"> 
                    <button class="filter-button dropdown-toggle" id="filterDropdown" type="button">
                        <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/288f65719c668d64c8fb2fb21677b16611d24d9e" alt="Filter" class="filter-icon">
                        <span>Filtrer par</span>
                    </button>

                    <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                        <li class="dropdown-submenu">
                            <a class="dropdown-item" href="#">Par statut     ▶</a>
                            <ul class="dropdown-menu submenu">
                                <li><a class="dropdown-item" href="/Reports/Index">Actifs</a></li>
                                <li><a class="dropdown-item" href="/Reports/IndexInactivated">Inactifs</a></li>
                                <li><a class="dropdown-item" href="/Reports/IndexAll">Tous</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="filter-right">
                <button id="btn-open-create-group" class="action-button primary" type="button">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/376f640a2a3a1aac147f0da3520427fa0abb8973?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Plus" class="action-icon">
                    <span>Nouveau</span>
                </button>
                <button class="action-button secondary">
                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/927e0d7a97c637a132d99b0f57f608cd6cf518cd?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Import" class="action-icon">
                    <span>Import/Export</span>
                </button>
            </div>
        </div>

        <!-- Data Table -->
        <div class="data-table">
            <table>
                <thead>
                    <tr>
                        <th class="checkbox-column">
                            <input type="checkbox" id="select-all" class="table-checkbox">
                        </th>
                        <th class="sortable">
                            <span>ID</span>
                            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/7c215a276d945185c56ecd3514506bd6ce90d21d?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Sort" class="sort-icon">
                        </th>
                        <th class="sortable">
                            <span>Titre</span>
                            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/7c215a276d945185c56ecd3514506bd6ce90d21d?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Sort" class="sort-icon">
                        </th>
                        <th class="sortable">
                            <span>Commentaire</span>
                            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/7c215a276d945185c56ecd3514506bd6ce90d21d?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Sort" class="sort-icon">
                        </th>
                        <th class="sortable">
                            <span>Statut</span>
                            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/7c215a276d945185c56ecd3514506bd6ce90d21d?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Sort" class="sort-icon">
                        </th>
                        <th class="sortable">
                            <span>Action</span>
                            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/7c215a276d945185c56ecd3514506bd6ce90d21d?placeholderIfAbsent=true&apiKey=099995ce3fec4a6aab6339dc5406b76b" alt="Sort" class="sort-icon">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td><input type="checkbox" class="table-checkbox"></td>
                            <td>@Html.DisplayFor(m => item.ID)</td>
                            <td>@Html.DisplayFor(m => item.title)</td>
                            <td>@Html.DisplayFor(m => item.commentaire)</td>
                            <td>
                                @if (item.is_active)
                                {
                                    <span class="badge active">Actif</span>
                                }
                                else
                                {
                                    <span class="badge inactive">Inactif</span>
                                }
                            </td>
                            <td class="action-cell">
                                @if (item.is_active)
                                {                                  
                                    <a href="#" class="edit-button" data-id="@item.ID">Modifier</a> 
                                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                                    <a href="#" class="delete-button" data-id="@item.ID">Supprimer</a>
                                }
                                else
                                {
                                    <form asp-action="Activate" asp-route-id="@item.ID" method="post" style="display:inline;">
                                        <button type="submit" class="restore-button">Restaurer</button>
                                    </form>

                                }

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination" id="pagination-container"></div>
    </div>
</div>
<style>
    /* Wrapper for the main dropdown */
    .filter-dropdown-wrapper {
        position: relative; /* parent for absolute dropdown */
        display: inline-block;
    }

        /* Main dropdown menu */
        .filter-dropdown-wrapper > .dropdown-menu {
            position: absolute;
            top: 100%; /* right below the button */
            left: 0;
            z-index: 1000;
            display: none;
            min-width: 150px;
            background: white;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

    /* Submenu for dropdown items */
    .dropdown-submenu {
        position: relative; /* parent for submenu */
    }

        .dropdown-submenu > .submenu {
            position: absolute;
            top: 0;
            left: 100%; /* appear to the right of parent */
            display: none;
            min-width: 150px;
            background: white;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

    .restore-button {
        background: none;
        border: none;
        color: #007bff;
        cursor: pointer;
        padding: 0;
        font: inherit;
        text-decoration: underline;
    }



</style>
@section Scripts {
    <script src="~/js/groups-modal.js" asp-append-version="true"></script>
    <script>
        // click handler to fetch & append the modal partial
        $(function () {
          $('#btn-open-create-group').on('click', function () {
            $.get('/Reports/CreateModal')
              .done(function (html) {
                $('body').append(html);
                // show is handled in the partial inline script, but ensure shown bootstrapping if needed
                $('#CreateGroupModal').modal('show');
              })
              .fail(function () {
                alert('Failed to load create-group form. Refresh and try again.');
              });
          });
        });
        $(document).on('click', '.edit-button', function (e) {
            e.preventDefault(); // stop the browser following the link

            var groupId = $(this).data('id');

            $.get('/Reports/EditModal', { id: groupId })
                .done(function (html) {
                    $('body').append(html);
                    $('#EditReportModal').modal('show');
                })
                .fail(function () {
                    alert('Failed to load edit-group form. Refresh and try again.');
                });
        });
        $(document).on('click', '.delete-button', function (e) {
            e.preventDefault(); // stop the browser following the link

            var groupId = $(this).data('id');

            $.get('/Reports/Delete', { id: groupId })
                .done(function (html) {
                    $('body').append(html);
                    $('#deleteReportModal').modal('show');
                })
                .fail(function () {
                    alert('Failed to load delete-group form. Refresh and try again.');
                });
        });
        $(document).ready(function () {
            $('#filterDropdown').on('click', function (e) {
                e.stopPropagation(); // prevent body click closing
                $(this).next('.dropdown-menu').toggle(); // show/hide the menu
            });

            // Hide dropdown when clicking outside
            $(document).on('click', function () {
                $('.dropdown-menu').hide();
            });

            // Handle submenu hover
            $('.dropdown-submenu').hover(
                function () { $(this).children('.dropdown-menu').stop(true, true).show(); },
                function () { $(this).children('.dropdown-menu').stop(true, true).hide(); }
            );
        });


    </script>
}

<script src="~/js/dashboard.js" asp-append-version="true"></script>