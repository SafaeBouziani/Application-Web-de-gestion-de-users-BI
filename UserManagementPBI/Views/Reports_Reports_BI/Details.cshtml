@model UserManagementPBI.Models.Reports_Reports_BI

@{
    Layout = null; // so it can be loaded via AJAX
}

<div class="modal fade" id="detailsReportBIModal" tabindex="-1" role="dialog" aria-labelledby="detailsReportBIModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="detailsReportBIModalLabel">
                    Détails du Report BI
                </h5>
                <button type="button" class="close btn-close-modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.id_report_bi)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.id_report_bi)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.title)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.title)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.id_web)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.id_web)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.report)</dt>
                    <dd class="col-sm-9">
                        @if (Model.report != null)
                        {
                            <span class="badge badge-info">Binary Data</span>
                        }
                        else
                        {
                            <span class="text-muted">Aucun contenu</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.order_report)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.order_report)</dd>

                    <dt class="col-sm-3">Report Group</dt>
                    <dd class="col-sm-9">@Model.ReportGroup?.title</dd>
                </dl>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-close-modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var $m = $('#detailsReportBIModal');
        $m.modal({ backdrop: 'static', keyboard: false });
        $m.on('hidden.bs.modal', function () {
            $(this).remove(); // remove modal from DOM after closing
        });
        $m.on('click', '.btn-close-modal', function () { $m.modal('hide'); });

    });
</script>

<style>
    .modal-body dl dt {
        font-weight: 600;
        border-right: 1px solid #eee;
    }

    .modal-body dl dd {
        margin-bottom: .5rem;
        padding-left: 10px;
    }
</style>
